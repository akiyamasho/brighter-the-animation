{
  "name": "brightertheanimation",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://brightertheanimation.com",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:once": "CI=true npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "prettier": "prettier --trailing-comma es5 --write '**/*.{js,jsx,css,md}' '!{CHANGELOG.md,**/*.min.js,**/{build,coverage,lib}/**/*}'",
    "prepush-check-prettier": "npm run prettier -- --list-different || (echo 'ERROR: Some files were updated by prettier. Please commit them and continue.'; exit 1)",
    "prepush": "npm-run-all -p prepush-check-prettier lint test:once",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "gh-pages": "^2.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-responsive": "^5.0.0",
    "react-scripts": "1.1.5",
    "react-spring": "^6.1.3",
    "react-youtube": "^7.6.0",
    "core-js": "^2.5.7",
    "redux": "^4.0.0",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16-context-fixes": "^1.1.2",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "redux-mock-store": "^1.5.3"
  }
}
